<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BaviHouse.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BaviHouse.View"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <Tab Title="Apartments">
            <ShellContent Title="Apartments"
                          ContentTemplate="{DataTemplate local:ApartmentPage}"
                          Route="ApartmentPage"/>
        </Tab>
        <Tab Title="Utility">
            <ShellContent Title="Utility"
                          ContentTemplate="{DataTemplate local:UtilityPage}"
                          Route="UtilityPage"/>
        </Tab>
    </FlyoutItem>

</Shell>
